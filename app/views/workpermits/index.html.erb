<p id="notice"><%= notice %></p>

<h1>Workpermits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workpermits.each do |workpermit| %>
      <tr>
          <td><b>First Name</b></td>
          <td><b>Last Name</b></td>
          <td><b>Status</b></td>
          <td colspan="=3"><b>Actions</b></td>
      </tr>
      <tr>
        <td><%= workpermit.first_name %></td>
          <td><%= workpermit.last_name %></td>
          <td><%= workpermit.status %></td>
        <td><%= link_to 'Show', workpermit %></td>
        <td><%= link_to 'Edit', edit_workpermit_path(workpermit) %></td>
        <td><%= link_to 'Destroy', workpermit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

